{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$ref": "#/$defs/TLSSignRequest",
  "$defs": {
    "PSSOptions": {
      "properties": {
        "SaltLength": {
          "type": "integer"
        }
      },
      "type": "object",
      "required": [
        "SaltLength"
      ]
    },
    "TLSSignRequest": {
      "properties": {
        "version": {
          "type": "string"
        },
        "content": {
          "type": "string",
          "contentEncoding": "base64"
        },
        "hashAlg": {
          "type": "string",
          "enum": [
            "SHA-256",
            "SHA-384",
            "SHA-512"
          ]
        },
        "pssOpts": {
          "$ref": "#/$defs/PSSOptions"
        }
      },
      "type": "object",
      "required": [
        "version",
        "content",
        "hashAlg"
      ]
    }
  }
}